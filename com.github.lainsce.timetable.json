{
    "app-id" : "com.github.lainsce.timetable",
    "base" : "io.elementary.BaseApp",
    "base-version" : "juno",
    "runtime" : "org.freedesktop.Platform",
    "sdk" : "org.freedesktop.Sdk",
    "runtime-version" : "18.08",
    "command" : "com.github.lainsce.timetable",
    "tags" : [
      "devel"
    ],
    "finish-args" : [
      "--share=ipc",
      "--socket=x11",
