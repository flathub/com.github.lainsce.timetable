      "/share/gtk-doc"
    ],
    "modules" : [
      {
        "name" : "timetable",
        "buildsystem" : "meson",
        "sources" : [
          {
            "type" : "archive",
            "url" : "https://github.com/lainsce/timetable/archive/1.0.3.tar.gz",
            "sha256" : "1d08a81f015c8228c2d8a332e3c9cc6c6ec73c670ad9322f0ac03fbbf72de320" 
          },
          {
              "type" : "patch",
              "path" : "elementary-theme.patch"
